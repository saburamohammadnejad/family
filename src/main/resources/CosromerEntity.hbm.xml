<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ir.maktab.model.services.cfg.xml.CosromerEntity" table="cosromer" schema="services">
        <composite-id mapped="true" class="ir.maktab.model.services.cfg.xml.CosromerEntityPK">
            <key-property name="password">
                <column name="password" sql-type="decimal(20)" precision="20"/>
            </key-property>
            <key-property name="userName">
                <column name="userName" sql-type="varchar(100)" length="100"/>
            </key-property>
        </composite-id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="lastName">
            <column name="Last-Name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="bigint(20)"/>
        </property>
        <property name="email">
            <column name="email" sql-type="decimal(20)" precision="20"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(100)" length="100"/>
        </property>
    </class>
</hibernate-mapping>