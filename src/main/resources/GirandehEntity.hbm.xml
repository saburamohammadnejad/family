<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ir.maktab.model.services.cfg.xml.GirandehEntity" table="girandeh" schema="services">
        <composite-id mapped="true" class="ir.maktab.model.services.cfg.xml.GirandehEntityPK">
            <key-property name="lastName">
                <column name="lastName" sql-type="varchar(50)" length="50"/>
            </key-property>
            <key-property name="dateTahvil">
                <column name="date tahvil" sql-type="timestamp"/>
            </key-property>
        </composite-id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="bigint(20)"/>
        </property>
    </class>
</hibernate-mapping>